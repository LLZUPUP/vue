*
    margin 0
    padding 0

body 
    overflow auto
    -webkit-overflow-scrolling: touch
.layout 
    overflow auto
    -webkit-overflow-scrolling: touch
    display flex
    justify-content: center
    align-items: center
    flex-direction column
    height 100%
    header 
        overflow auto
        display flex
        max-width 600px
        width 100%
        padding 20px
        flex-direction row
        justify-content: space-around
        span 
            width 100px 
            display inline-flex
            align-items: center
            justify-content: center
        button 
            outline: none
            border: none 
            background: #8f7a66
            color #ffffff
            font-size 20px 
            padding 10px 30px
            cursor pointer
            border-radius: 10px  
    .all-container
        height 620px
        width 620px
        .background
            box-sizing content-box
            background-color green
            display inline-flex
            flex 0 0 600px
            flex-wrap wrap
            padding 10px
            justify-content space-between
            border-radius 10px
            width 600px
            position absolute
            z-index -1

            &>span 
                background-color #eee4da59
                margin 10px
                border-radius 10px
                width 130px
                height 130px

        .container
            z-index 0
            position absolute
            padding 10px
            width 620px
            height 620px
            display inline-flex
            justify-content flex-start
            align-items flex-start

            .list
                margin 10px
                width 130px
                height 130px
                border-radius 10px
                position absolute
                font-size 55px
                font-weight bold
                .inner
                    width 100%
                    height 100%
                    color #ffffff
                    display inline-flex
                    align-items center
                    justify-content center
                    border-radius 10px

@media screen and (max-width:900px)
    html,body 
        overflow hidden
    .layout
        overflow hidden
        header 
            span 
                width 70px
            button 
                padding 10px 15px
        .all-container
            margin 2vw
            width 96vw
            height 96vw

            .background,.container
                width 96vw
                height 96vw
                box-sizing border-box
                padding 1vw
                &>span,.list
                    width 21vw
                    height 21vw
                    margin 1vw
                    font-size 8vw